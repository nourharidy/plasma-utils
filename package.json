{
  "name": "plasma-utils",
  "version": "0.0.1",
  "description": "Core plasma utilities",
  "main": "index.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha --recursive test/",
    "test.coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "./node_modules/.bin/eslint src/ test/",
    "build": "gulp"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run build && git add dist/ && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json,css,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:plasma-group/plasma-utils.git"
  },
  "keywords": [
    "plasma"
  ],
  "author": "Plasma Group",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/plasma-group/plasma-utils/issues"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "lodash": "^4.17.11",
    "web3": "^1.0.0-beta.37"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "del": "^3.0.0",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "exorcist": "^1.0.1",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-streamify": "^1.0.2",
    "gulp-uglify-es": "^1.0.4",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "vinyl-source-stream": "^2.0.0"
  }
}
